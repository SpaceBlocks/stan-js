{
  "name": "create-store",
  "version": "1.0.0",
  "description": "- ⚛️ updates outside react components - 🪝 easy access to all store values - ✍️ no repeating yourself - ⚡️ no unnecessary rerenders - 🚀 typescript intellisense",
  "source": "src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "module": "./dist/index.mjs",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "rm -rf dist && rm -rf .parcel-cache",
    "build": "parcel build",
    "build:watch": "parcel watch",
    "postbuild": "cp dist/index.d.ts dist/index.d.mts",
    "check:config": "attw --pack . && publint",
    "check:typescript": "tsc --noEmit",
    "test": "bun test"
  },
  "author": "@codemaskinc",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@arethetypeswrong/cli": "0.13.3",
    "@parcel/packager-ts": "2.10.3",
    "@parcel/transformer-typescript-types": "2.10.3",
    "@types/react": "18.2.45",
    "bun-types": "^1.0.18-1",
    "parcel": "2.10.3",
    "publint": "0.2.6",
    "react": "18.2.0",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "react": ">=18.2.0"
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3"
  }
}
